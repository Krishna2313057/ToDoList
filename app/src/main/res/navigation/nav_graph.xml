<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.todolist.ui.fragments.HomeFragment"
        android:label="Tasks"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_addTaskFragment"
            app:destination="@id/addTaskFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />

    </fragment>

    
    <fragment
        android:id="@+id/addTaskFragment"
        android:name="com.example.todolist.ui.fragments.AddTaskFragment"
        android:label="Add/Edit Task"
        tools:layout="@layout/fragment_add_task">

        
        <argument
            android:name="task"
            app:argType="com.example.todolist.model.Task"
            app:nullable="true" />

        <argument
            android:name="dueDate"
            app:argType="long?"
            app:nullable="true" />
    </fragment>
</navigation>
